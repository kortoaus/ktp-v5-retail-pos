{
  "name": "retail-pos",
  "version": "1.0.0",
  "description": "Retail POS Desktop Application",
  "main": "./out/main/index.js",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "postinstall": "electron-builder install-app-deps",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:all": "npm run build && electron-builder --win --mac"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "axios": "^1.13.5",
    "clsx": "^2.1.1",
    "decimal.js": "^10.6.0",
    "es-hangul": "^2.3.8",
    "iconv": "^3.0.1",
    "iconv-lite": "^0.7.2",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.13.0",
    "serialport": "13.0.0",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/iconv": "^3.0.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "electron": "40.2.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.0"
  },
  "build": {
    "appId": "com.retailpos.app",
    "productName": "Retail POS",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ],
    "asarUnpack": [
      "resources/**",
      "node_modules/serialport/**",
      "node_modules/@serialport/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-setup.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "identity": null
    },
    "dmg": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "npmRebuild": true
  }
}
